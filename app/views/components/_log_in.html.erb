<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.text_field :email, autofocus: true  %>
  <%= f.password_field :password %>
  <br>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  <%= f.submit 'Sign in' %>
  <br>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>